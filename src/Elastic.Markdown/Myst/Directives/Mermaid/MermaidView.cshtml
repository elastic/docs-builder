@inherits RazorSlice<Elastic.Markdown.Myst.Directives.Mermaid.MermaidViewModel>
@{
	var mermaid = Model.MermaidBlock;
	if (!string.IsNullOrEmpty(mermaid?.RenderedSvg))
	{
		<div class="mermaid">
			@(new Microsoft.AspNetCore.Html.HtmlString(mermaid.RenderedSvg))
		</div>
	}
	else
	{
		<div class="mermaid-error">
			<p>Failed to render Mermaid diagram</p>
		</div>
	}
}
