@using Elastic.Markdown.Myst.Components

@inherits RazorSlice<Elastic.Markdown.Myst.Directives.Tabs.TabItemViewModel>

@{
	var id = $"tabs-item-{Model.TabSetIndex}-{Model.Index}";
}

<input class="tabs-input" checked="@(Model.Index == 0 ? "checked" : "")" id="@id" name="tabs-set-@Model.TabSetIndex" type="radio" tabindex="0">
@if (! string.IsNullOrWhiteSpace(Model.Title))
{
	<label class="tabs-label" data-sync-id="@Model.SyncKey" data-sync-group="@Model.TabSetGroupKey" for="@id">@Model.Title</label>
}
else
{
	<label class="tabs-label" data-sync-id="@Model.SyncKey" data-sync-group="@Model.TabSetGroupKey" for="@id">
	<span class="applies applies-inline">
		@RenderPartialAsync(ApplicableToComponent.Create(Model.ApplicableToViewModel))
	</span>
	</label>
}
<div class="tabs-content" tabindex="0">
	@Model.RenderBlock()
</div>
