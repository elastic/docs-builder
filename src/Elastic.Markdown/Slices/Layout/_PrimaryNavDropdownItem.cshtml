@inherits RazorSlice<PrimaryNavDropdownItemViewModel>
<li class="pb-6 pt-6 xl:first:pt-6 pl-12 pr-6 xl:px-8 flex gap-3 first:border-t-1 not-last:border-b-1 xl:border-none border-grey-20">
	@if (Model.IconPath != null)
	{
		<div class="size-9 flex items-center justify-center rounded-lg bg-grey-10 shrink-0">
			<img alt="@Model.IconAlt" src="@Model.IconPath" width="18" height="18"/>
		</div>
	}
	<a onclick="document.getElementById('primary-nav-hamburger').checked = false"
	   href="@Model.Url" class="hover:underline" @Model.HtmxAttributes>
		<strong class="font-semibold">@Model.Title</strong>
		<p class="text-sm text-ink-light">@Model.Description</p>
	</a>
</li>
